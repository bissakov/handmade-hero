{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build x64 (Python)",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/build.py",
        "--arch",
        "x64"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build x86 (Python)",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/build.py",
        "--arch",
        "x86"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Build x64 (CMake)",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "${workspaceFolder}/build"
      ]
    }
  ]
}
